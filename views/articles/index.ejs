<%- include('../layouts/header.ejs') %>

<main class="flex-grow"> <!-- This will grow to fill the available space -->
    <section class="py-10 ">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="font-manrope text-4xl font-bold text-gray-900 text-center">Our latest Articles</h2>
            <button class="my-10 font-bold rounded-lg text-lg w-40 h-16 bg-[#257e28] text-[#ffffff] justify-center">
                <a href="articles/new" class="text-gray-300 hover:text-white transition duration-300">Create new article</a>
            </button>

            <div class="flex  flex-wrap justify-center gap-8"> <!-- Utilisation de flex-wrap ici -->
                <% articles.forEach(article => { %>
                <div class="group w-full max-w-sm border border-gray-300 rounded-2xl lg:w-1/3 mb-4 mx-2"> <!-- Added mx-2 for margin-left and margin-right -->
                    <div class="flex items-center">
                        <img src="<%= article.image %>" alt="blogs tailwind section" class="rounded-t-2xl w-full object-cover" name="image">
                    </div>
                    <div class="p-4 lg:p-6 transition-all duration-300 rounded-b-2xl group-hover:bg-gray-50">
                        <h4 class="text-xl text-gray-900 font-medium leading-8 mb-5" name="title"><%= article.title %></h4>
                        <p class="text-gray-500 leading-6 mb-10" name="description"><%= article.description %></p>
                        <span class="text-indigo-600 font-medium mb-3 block" name="createdAt"><%= article.createdAt.toLocaleDateString() %></span>
                        
                        
                        <button class="my-2 font-bold rounded-lg text-lg w-20 h-16 bg-[#257e28] text-[#ffffff] justify-center">
                            <a href="articles/show" class="text-gray-300 hover:text-white transition duration-300">Read more</a>
                        </button>

                        <button  type="button" class="text-black bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-4 focus:ring-yellow-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:focus:ring-yellow-900">
                            <a href="articles/edit">Edit</a>
                        </button>
                        
                        <button class="my-2 font-bold rounded-lg text-lg w-20 h-16 bg-[#257e28] text-[#ffffff] justify-center">
                            <a href="articles/delete" class="text-gray-300 hover:text-white transition duration-300">Delete</a>
                        </button>
                    </div>
                </div>

                <% }) %>
            </div>

        </div>
    </section>
</main>
<%- include('../layouts/footer.ejs') %>
