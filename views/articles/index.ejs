<%- include('../layouts/header.ejs')  %>

<main class="flex-grow"> <!-- This will grow to fill the available space -->
    <section class="py-10 ">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <h2 class="font-manrope text-4xl font-bold text-gray-900 text-center ">Our latest  Articles</h2>
          <button class="my-10 font-bold rounded-lg text-lg  w-40 h-16 bg-[#257e28] text-[#ffffff] justify-center">
            <a href="articles/new" class="text-gray-300 hover:text-white transition duration-300">Create new article</a>
            </button>
          <div class="flex justify-center  gap-y-8 lg:gap-y-0 flex-wrap md:flex-wrap lg:flex-nowrap lg:flex-row lg:justify-between lg:gap-x-8">
             <div class="group w-full max-lg:max-w-xl lg:w-1/3 border border-gray-300 rounded-2xl">
              <div class="flex items-center">
                  <img src="https://pagedone.io/asset/uploads/1696244317.png" alt="blogs tailwind section" class="rounded-t-2xl w-full object-cover" name="image">
              </div>
              <div class="p-4 lg:p-6 transition-all duration-300 rounded-b-2xl group-hover:bg-gray-50">
                  
                  <h4 class="text-xl text-gray-900 font-medium leading-8 mb-5" name="title">Title</h4>
                  <p class="text-gray-500 leading-6 mb-10" name="description"></p>
                  <span class="text-indigo-600 font-medium mb-3 block" name="createdAt">Date: </span>
                   
                  <button class="my-10 font-bold rounded-lg text-lg  w-20 h-16 bg-[#257e28] text-[#ffffff] justify-center">
                    <a href="articles/show" class="text-gray-300 hover:text-white transition duration-300">Read more</a>
                    </button>
                  
                  <button class="my-10 font-bold rounded-lg text-lg  w-20 h-16 bg-[#257e28] text-[#ffffff] justify-center">
                    <a href="articles/delete" class="text-gray-300 hover:text-white transition duration-300">Delete</a>
                    </button>
                  
              </div>
             </div>
            
             </div>
          </div>
        </div>
    </section>
                                            
</main>
<%- include('../layouts/footer.ejs')  %>